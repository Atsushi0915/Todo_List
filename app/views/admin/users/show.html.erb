<h1>ユーザーの詳細</h1>

<div class="nav justify-content-end">
  <%= link_to "一覧", admin_users_path, class:"nav-link" %>
</div>

<table class="table table-hover">
  <tbody>
    <tr>
      <%= tag.th User.human_attribute_name(:id) %>
      <%= tag.td @user.id %>
    </tr>
    <tr>
      <%= tag.th User.human_attribute_name(:name) %>
      <%= tag.td @user.name %>
    </tr>
    <tr>
      <%= tag.th User.human_attribute_name(:email) %>
      <%= tag.td @user.email %>
    </tr>
    <tr>
      <%= tag.th User.human_attribute_name(:admin) %>
      <%= tag.td @user.admin? ? "あり" : "なし" %>
    </tr>
    <tr>
      <%= tag.th User.human_attribute_name(:created_at) %>
      <%= tag.td @user.created_at %>
    </tr>
    <tr>
      <%= tag.th User.human_attribute_name(:updated_at) %>
      <%= tag.td @user.updated_at %>
    </tr>
  </tbody>
</table>
<div class="d-flex flex-row">
  <%= button_to "編集", edit_admin_user_path, class:"btn btn-primary mr-3" %>
  <%= button_to "削除", [:admin, @user], method: :delete , form: { data: { turbo_confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？"}}, class:"btn btn-danger" %>
</div>
